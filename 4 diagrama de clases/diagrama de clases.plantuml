    newpage

    class Estadistica {
        - vida : int 
        - ataqueFisico : int
        - defensaFisica : int
        - ataqueEspecial : int 
        - defensaEspecial : int
        - velocidad : int 

        + toString()
  }

    newpage

    class Movimiento {
        - idMovimiento : int
        - nombre: str
        - descripcion : str
        - potencia : int
        - precision: int
        - cantidadPP : int
        - elemento : str
        - efecto : Efecto 

