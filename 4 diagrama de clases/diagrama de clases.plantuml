        - movimientos : ArrayList<Movimiento>
        - efecto : Efecto
        - defendiendo : boolean
        
        + getMovimientos()
        + obtenerMovimientoPorID(idMovimiento : int)
        + activarDefensa()
        + afectarHp()
        
