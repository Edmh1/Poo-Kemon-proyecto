    class Batalla {
        - idBatalla : int
        - entrenador1 : Entrenador
        - entrenador2 : Entrenador
        - turnos[] : str
        - numeroTurno: int

        + iniciarBatalla()
        + generarMazoPookemones()
        + aplicarEfectosPersistentes()
        + determinarTurno()
        + ejecutarTurno(Primero : Entrenador, Segundo : Entrenador)
